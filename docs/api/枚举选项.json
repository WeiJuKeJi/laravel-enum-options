        "operationId": "getEnumList",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "Accept",
            "in": "header",
            "required": true,
            "schema": { "type": "string" },
            "example": "application/json"
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 200,
                  "msg": "success",
                  "data": {
                    "list": [
                      {
                        "key": "payment_methods",
