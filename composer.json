{
    "name": "your-vendor/laravel-enum-options",
    "description": "A Laravel package for handling enums with frontend-friendly options (labels, colors, icons) and multi-language support",
    "keywords": [
        "laravel",
        "enum",
        "options",
        "frontend",
        "api",
        "i18n",
        "resource"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "YourVendor\\EnumOptions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YourVendor\\EnumOptions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "YourVendor\\EnumOptions\\EnumOptionsServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
